<%- if params.has_key?(:number_of_files) or !@file_assets.hits.empty? -%>
  <%= render :partial => "file_assets/index", :locals => { :file_assets => @file_assets } %>
<%- end -%>
<%- form_tag(url_for(:controller=>"submission_workflow",:action=>"file_assets")) do -%>
  <%= label_tag "number_of_files", "Number of files add" %>
  <%= select_tag("number_of_files", options_for_select((0...11).to_a) ) -%>
  <%= hidden_field_tag("id",params[:id], :id => "file_assets_id")%>
  <%= submit_tag(submit_name, :name=>"continue")%>
<%- end -%>